package com.pavan.test;


import org.springframework.beans.factory.xml.XmlBeanFactory;
import org.springframework.core.io.FileSystemResource;

import com.pavan.comp.WishGenarator;


public class SetterInjuctionUsingBeenFactory {

	public static void main(String[] args) {

		FileSystemResource resource = new FileSystemResource("src\\com\\pavan\\cfg\\applicationContext.xml");
		System.out.println("***********BeanFactory container starting************");
		@SuppressWarnings("deprecation")
		XmlBeanFactory fs = new XmlBeanFactory(resource);
		System.out.println("***********BeanFactory container Started ************");
		WishGenarator bean = fs.getBean("wg", WishGenarator.class);
		bean.wish("Pavan");
	}

}
