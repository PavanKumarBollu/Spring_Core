package com.pavan.comp;

import java.util.Date;

public class WishGenarator {
	
	private Date date = null;
	
	
	static
	{
		System.out.println("WishGenarator .class file is loaded");
		System.out.println();
	}


	public WishGenarator() {
	System.out.println("Wish Genarator Object Instantiated ");
	System.out.println();
	}


	public Date getDate() {
		return date;
	}


	public void setDate(Date date) {
		System.out.println("WishGenarator.setDate() methods is Called and Object Injucted");
		
		System.out.println();
		this.date = date;
	}
	
	
	@SuppressWarnings("deprecation")
	public String wish(String userName)
	{
		int hours = date.getHours();
		if(hours<=12)
		{
			return "Good Morning :" + userName;
		}else if(hours <= 16)
		{
			return "Good AfterNoon :"+ userName;
		}
		else if(hours <= 18)
		{
			return "Good Evening : " + userName;
		}
		else
		{
			return "Good Night :" + userName;
		}
		
	}


	@Override
	public String toString() {
		return "WishGenarator [date=" + date + "]";
	}
	
	
}
