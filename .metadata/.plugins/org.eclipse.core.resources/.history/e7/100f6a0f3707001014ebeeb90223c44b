package com.pavan.comp;

import java.util.Date;

public class WishGenarator {
	private Date date = null;
	
	
	static
	{
		System.out.println("WishGenarator .class file is loaded");
	}


	public WishGenarator() {
	System.out.println("Wish Genarator Object Instantiated ");
	}


	public Date getDate() {
		return date;
	}


	public void setDate(Date date) {
		this.date = date;
	}
	
	
	@SuppressWarnings("deprecation")
	public String wish(String userName)
	{
		int hours = date.getHours();
		if(hours<=12)
		{
			return "Good Morning :" + userName;
		}else if(hours <= 17)
		{
			System.out.println("Good Evening :"+ userName);
		}
		
	}
	
	
}
